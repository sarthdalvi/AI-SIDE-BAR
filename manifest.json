{
  "manifest_version": 3,
  "name": "AI Side Bar",
  "version": "1.1",
  "description": "Sidebar-style popup with AI chat, bookmarks, and productivity tools",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "AI Side Bar",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "bookmarks",
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ]
}